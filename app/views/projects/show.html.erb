<% full_title("Project") %>

<ul>
  <div class="header"><h2><%= @project.name %></h2></div>
    <h4><%= @project.description %></h4>
    <%= link_to "Back to Project Index",projects_path  %>   |
    <%= link_to 'Edit Project', edit_project_path(@project) %>      |
    <%= link_to 'Delete Project', @project, method: :delete, data: { confirm: 'Are you sure?' } %> |
    <%= link_to "Add Forest", new_project_forest_path(@project) %>     |
    <%= link_to "Project Report",report_project_path(@project) %>
        <br>
    <% if @project.forests.count > 0 %>
    <table>
      <thead>
      <tr>
        <h4><th>Forest Listing</th> </h4>
        <th colspan="3"></th>

      </tr>
      </thead>

      <%#= paginate @forests %>
      <tbody>
      <% @project.forests.each do |forest| %>
          <tr>
                <td>
                      #<%= forest.id %> -
                      <%= link_to forest.name, [@project, forest] %>
                </td>
             </tr>
       <% end %>
      </tbody>
    </table>
        <% else %>
        <% flash[:notice] = "No forests found, click 'Add Forests'" %>
    <% end %>
</ul>